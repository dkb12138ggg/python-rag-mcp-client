# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TIMEOUT=30

# API服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_MAX_CONCURRENT_REQUESTS=100
API_REQUEST_TIMEOUT=300
API_RATE_LIMIT_PER_MINUTE=60

# MCP连接配置
MCP_SERVER_URL=mcp.json
MCP_MAX_CONNECTIONS_PER_SERVER=5
MCP_CONNECTION_TIMEOUT=30
MCP_RECONNECT_INTERVAL=5
MCP_MAX_RECONNECT_ATTEMPTS=3
MCP_HEALTH_CHECK_INTERVAL=60

# PostgreSQL数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mcp_rag
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_password123
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=3600

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# RAG配置
# 嵌入模型配置
RAG_EMBEDDING_MODEL=text-embedding-ada-002
RAG_EMBEDDING_DIMENSIONS=1536

# 文本分块配置
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# 搜索配置
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_SEARCH_RESULTS=10

# 缓存配置
RAG_ENABLE_CACHE=true
RAG_CACHE_TTL=3600

# 文档处理配置
RAG_MAX_FILE_SIZE=10485760  # 10MB
RAG_SUPPORTED_FILE_TYPES=["txt", "pdf", "docx", "md"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=100MB
LOG_BACKUP_COUNT=5

# 监控配置
MONITORING_ENABLE_PROMETHEUS=true
MONITORING_PROMETHEUS_PORT=8001
MONITORING_ENABLE_HEALTH_CHECK=true

# 环境设置
ENVIRONMENT=development
DEBUG=false

# Grafana配置（docker-compose使用）
GRAFANA_PASSWORD=admin123

# 其他API密钥（如果使用agentdocs-server）
SERPER_API_KEY=your_serper_api_key_here